        <!-- Main Content -->
        <main class="notifications-main">
            <div class="container">
                <div class="page-header">
                    <h1>{{.Title}}</h1>
                    <div class="page-actions">
                        <button class="btn btn-secondary" onclick="refreshStats()">
                            <i class="icon-refresh"></i> Yenile
