# KolajAI Enterprise Marketplace Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENV=development

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kolajAi
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# Security Keys (Generate secure keys for production)
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
CSRF_SECRET=your-csrf-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# HashiCorp Vault Configuration (Optional but recommended for production)
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_PATH=secret/kolajAi

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@kolajAi.com

# Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# AI Service API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
STABILITY_AI_API_KEY=
REPLICATE_API_KEY=
HUGGINGFACE_API_KEY=

# Marketplace Integration Credentials

## Trendyol
TRENDYOL_API_KEY=
TRENDYOL_API_SECRET=
TRENDYOL_SUPPLIER_ID=

## Hepsiburada
HEPSIBURADA_USERNAME=
HEPSIBURADA_PASSWORD=
HEPSIBURADA_MERCHANT_ID=

## N11
N11_API_KEY=
N11_API_SECRET=

## Amazon Turkey
AMAZON_TR_ACCESS_KEY=
AMAZON_TR_SECRET_KEY=
AMAZON_TR_SELLER_ID=
AMAZON_TR_MARKETPLACE_ID=

## Çiçeksepeti
CICEKSEPETI_API_KEY=
CICEKSEPETI_API_SECRET=
CICEKSEPETI_BRANCH_CODE=

# Payment Integration Credentials

## Iyzico
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Cache Configuration
CACHE_DRIVER=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3000

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_MARKETPLACE_SYNC=true
FEATURE_ADVANCED_SEARCH=false
FEATURE_RECOMMENDATION_ENGINE=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true

# Session
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,csv,xlsx

# API Configuration
API_TIMEOUT=30s
API_MAX_CONNECTIONS=100
API_IDLE_TIMEOUT=90s

# Background Jobs
JOB_WORKERS=4
JOB_QUEUE_SIZE=100
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5s

# Development/Testing
DEBUG=true
TESTING=false
MOCK_EXTERNAL_APIS=false