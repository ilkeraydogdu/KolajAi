# KolajAI Enterprise Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
APP_ENV=development
GIN_MODE=debug
PORT=8081

# Database Configuration
DB_PATH=kolajAi.db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Security Keys (MUST be changed in production)
ENCRYPTION_KEY=CHANGE_ME_IN_PRODUCTION_32_BYTES_LONG
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_JWT_SECRET
CSRF_SECRET=CHANGE_ME_IN_PRODUCTION_CSRF_SECRET
SESSION_SECRET=CHANGE_ME_IN_PRODUCTION_SESSION_SECRET

# Admin Credentials
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@kolajAi.com
FROM_NAME=KolajAI

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_UPLOAD_SIZE=10MB
EMAIL_TEMPLATE_DIR=web/templates/emails

# Logging
LOG_LEVEL=info
LOG_PATH=logs

# External Services
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Vault Configuration (Optional)
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_PATH=secret/kolajAi

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Development Only
DEBUG_MODE=true
ENABLE_PROFILING=false