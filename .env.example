# KolajAI Enterprise Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
APP_ENV=development
GIN_MODE=debug
PORT=8081

# Database Configuration
DB_PATH=kolajAi.db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Security Keys (MUST be changed in production)
ENCRYPTION_KEY=CHANGE_ME_IN_PRODUCTION_32_BYTES_LONG
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_JWT_SECRET
CSRF_SECRET=CHANGE_ME_IN_PRODUCTION_CSRF_SECRET
SESSION_SECRET=CHANGE_ME_IN_PRODUCTION_SESSION_SECRET

# Admin Credentials
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@kolajAi.com
FROM_NAME=KolajAI

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_UPLOAD_SIZE=10MB
EMAIL_TEMPLATE_DIR=web/templates/emails

# External Services
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Marketplace Integrations
TRENDYOL_API_KEY=your-trendyol-api-key
TRENDYOL_SECRET=your-trendyol-secret
HEPSIBURADA_API_KEY=your-hepsiburada-api-key
HEPSIBURADA_SECRET=your-hepsiburada-secret
N11_API_KEY=your-n11-api-key
N11_SECRET=your-n11-secret

# Vault Configuration (Optional)
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_PATH=secret/kolajAi

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_PATH=logs

# Development Only
DEBUG_MODE=true
ENABLE_PROFILING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Session Configuration
SESSION_TIMEOUT=24h
SESSION_CLEANUP_INTERVAL=1h

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=1h
CACHE_MAX_SIZE=1000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30s

# AI Configuration
AI_CREDITS_PER_USER=1000
AI_VISION_ENABLED=true
AI_CHAT_ENABLED=true
AI_CONTENT_GENERATION_ENABLED=true

# Notification Configuration
NOTIFICATION_CHANNELS=email,sms,push,whatsapp,inapp
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
PUSH_NOTIFICATION_KEY=your-push-key
WHATSAPP_API_KEY=your-whatsapp-api-key

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=1000

# Security Configuration
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Performance Configuration
MAX_REQUEST_SIZE=32MB
REQUEST_TIMEOUT=30s
IDLE_TIMEOUT=120s
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s