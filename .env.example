# KolajAI Enterprise Marketplace - Environment Configuration

# Application Settings
APP_NAME=KolajAI Enterprise Marketplace
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kolaj.ai
APP_PORT=8080

# Database Configuration
DB_TYPE=sqlite
DB_PATH=/app/data/kolajAi.db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_POOL_SIZE=10

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here
CSRF_SECRET=your_csrf_secret_key_here

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/kolaj.ai.crt
SSL_KEY_PATH=/etc/ssl/private/kolaj.ai.key
AUTO_CERT=true

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@kolaj.ai
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@kolaj.ai
SMTP_FROM_NAME=KolajAI Team

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt
UPLOAD_VIRUS_SCAN=true

# External Services
# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Payment Gateway (Iyzico)
IYZICO_API_KEY=your_iyzico_api_key_here
IYZICO_SECRET_KEY=your_iyzico_secret_key_here
IYZICO_BASE_URL=https://api.iyzipay.com

# OAuth2 Configuration
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Facebook OAuth2
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_PATH=/app/logs

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here

# Traefik Configuration
TRAEFIK_AUTH=admin:$2y$10$your_bcrypt_hashed_password_here
ACME_EMAIL=admin@kolaj.ai

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BURST=10

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=https://kolaj.ai,https://www.kolaj.ai
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; media-src 'self'; object-src 'none'; child-src 'self'; worker-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=kolaj-ai-backups
BACKUP_S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.kolaj.ai
CDN_PULL_ZONE=kolaj-ai-static

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes
CACHE_PREFIX=kolaj_ai
CACHE_DRIVER=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120  # minutes
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=1000
API_TIMEOUT=30s

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8081
WEBSOCKET_PATH=/ws
WEBSOCKET_ORIGINS=https://kolaj.ai

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30s

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_AUCTION_ENABLED=true
FEATURE_WHOLESALE_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_2FA_ENABLED=true

# Development/Testing (set to false in production)
ENABLE_PPROF=false
ENABLE_DEBUG_ROUTES=false
ENABLE_SWAGGER=false

# Timezone
TZ=Europe/Istanbul

# Locale
LOCALE=tr_TR
CURRENCY=TRY

# Performance
MAX_REQUEST_SIZE=10MB
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s
SHUTDOWN_TIMEOUT=30s

# Worker Configuration
WORKER_ENABLED=true
WORKER_CONCURRENCY=10
WORKER_QUEUE_SIZE=1000

# Search Configuration
SEARCH_ENGINE=elasticsearch
SEARCH_INDEX_PREFIX=kolaj_ai
SEARCH_BATCH_SIZE=100

# Notification Configuration
NOTIFICATION_QUEUE_SIZE=1000
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_REQUESTS=true
AUDIT_LOG_RESPONSES=false
AUDIT_RETENTION_DAYS=90